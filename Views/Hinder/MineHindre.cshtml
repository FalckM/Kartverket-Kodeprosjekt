@model IEnumerable<NRLWebApp.Models.Entities.Hinder>
@{
    ViewData["Title"] = "Mine Registrerte Hindre";
}

<h2>@ViewData["Title"]</h2>
<p>Her er en oversikt over hindrene du har rapportert, og deres nåværende status.</p>
<hr />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoyde) (m)
            </th>
            <th>
                Status
            </th>
            <th>
                Dato Rapportert
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoyde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tidsstempel)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.HinderID">Detaljer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Registrer et nytt hinder</a>
</div>