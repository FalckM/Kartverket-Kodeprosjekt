@model IEnumerable<NRLWebApp.Models.Entities.Hinder>
@{
    ViewData["Title"] = "Hinder-liste";
}

<h2>@ViewData["Title"]</h2>
<hr />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoyde) (m)
            </th>
            <th>
                Status
            </th>
            <th>
                Rapportert av
            </th>
            <th>
                Organisasjon
            </th>
            <th>
                Dato
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoyde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Fornavn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Organisasjon.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tidsstempel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HinderID">Behandle</a> |
                    <a asp-action="Details" asp-route-id="@item.HinderID">Detaljer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
