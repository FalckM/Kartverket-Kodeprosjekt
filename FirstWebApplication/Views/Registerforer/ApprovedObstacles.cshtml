@model IEnumerable<FirstWebApplication.Entities.ObstacleData>

@{
    ViewData["Title"] = "Approved Obstacles";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Approved Obstacles</h1>
            <p class="text-gray-600 mt-2">View all approved obstacle registrations</p>
        </div>
        <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
            ‚Üê Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Height</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Approved By</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Approved Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var obstacle in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#@obstacle.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@obstacle.ObstacleName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@obstacle.ObstacleHeight m</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@obstacle.ApprovedBy</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @obstacle.ApprovedDate?.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <a asp-action="ViewObstacle" asp-route-id="@obstacle.Id" 
                                   class="text-indigo-600 hover:text-indigo-800 font-medium">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 text-gray-600 text-sm">
            Total approved: <strong>@Model.Count()</strong> obstacles
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-medium text-gray-900 mb-2">No Approved Obstacles</h3>
            <p class="text-gray-600">No obstacles have been approved yet.</p>
        </div>
    }
</div>
