@using Microsoft.AspNetCore.Identity
@using FirstWebApplication.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webapplikasjon for luftfartshindre</title>

    <!-- Tailwind + AlpineJS + Material Icons -->
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>
    <link rel="stylesheet" href="~/lib/leaflet-draw/dist/leaflet.draw.css" />
    <script src="~/lib/leaflet-draw/dist/leaflet.draw.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<!-- 🔹 bruker ViewData for å tillate hvit eller transparent bakgrunn på login/register -->
<body class="text-black @(ViewData["BodyClass"] ?? "bg-[#f8fafc]")">

    <!-- NAVBAR -->
    <nav class="fixed top-0 left-0 w-full bg-[#f1f5f9] shadow-md border-b border-gray-300 z-50">
        <div class="max-w-screen-xl mx-auto flex items-center justify-between px-6 py-3">

            <!-- Venstre del -->
            <div class="flex items-center space-x-2">
                <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 no-underline hover:no-underline">
                    <span class="mdi mdi-airplane text-2xl text-blue-600"></span>
                    <span class="text-xl font-bold text-blue-700">Webapplikasjon for luftfartshindre</span>
                </a>
            </div>

            <!-- Midtre meny -->
            <ul class="flex items-center space-x-6 font-semibold">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-blue-600 transition">Home</a></li>
                <li><a asp-controller="Obstacle" asp-action="Oversikt" class="hover:text-blue-600 transition">Oversikt</a></li>
                <li><a asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600 transition">Privacy</a></li>
            </ul>

            <!-- Høyre del -->
            <div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- SIDEINNHOLD -->
    <div class="min-h-screen pt-20 px-6">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-[#f1f5f9] text-center py-3 text-sm text-gray-700 border-t border-gray-300">
        &copy; @DateTime.Now.Year - Webapplikasjon for luftfartshindre
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
