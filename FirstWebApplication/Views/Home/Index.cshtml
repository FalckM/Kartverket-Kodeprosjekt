@{
    ViewData["Title"] = "Welcome";
    Layout = null; // No layout - this is a standalone landing page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aviation Obstacle Registration</title>
    
    <!-- Leaflet CSS for the map -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        /* Remove all margins and make the page full height */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow: hidden; /* Prevent scrolling */
        }

        /* Full-screen map container */
        #landing-map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1; /* Behind the overlay */
        }

        /* Dark overlay that covers the map - this makes it clear you can't use the map yet */
        .map-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent black */
            backdrop-filter: blur(3px); /* Blur effect */
            z-index: 2; /* Above the map, below the modal */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* The login modal box */
        .login-modal {
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            padding: 40px;
            width: 90%;
            max-width: 420px;
            z-index: 3; /* Above everything */
        }

        /* Style for the login form */
        .login-modal h1 {
            font-size: 28px;
            font-weight: bold;
            color: #1f2937;
            margin-bottom: 10px;
            text-align: center;
        }

        .login-modal p {
            color: #6b7280;
            text-align: center;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .login-modal input {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 15px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        .login-modal input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .login-modal button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .login-modal button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .login-modal button:active {
            transform: translateY(0);
        }

        /* Checkbox styling */
        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            font-size: 14px;
            color: #4b5563;
        }

        .remember-me input {
            width: auto;
            margin-right: 8px;
            margin-bottom: 0;
        }

        /* Link to register page */
        .register-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #6b7280;
        }

        .register-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        /* Error message styling */
        .error-message {
            background-color: #fee;
            color: #c00;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 13px;
            text-align: center;
        }

        /* Logo/branding area */
        .branding {
            text-align: center;
            margin-bottom: 30px;
        }

        .branding .icon {
            font-size: 48px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <!-- Full-screen map in the background -->
    <div id="landing-map"></div>

    <!-- Dark overlay with login modal -->
    <div class="map-overlay">
        <div class="login-modal">
            <!-- Branding/Icon -->
            <div class="branding">
                <div class="icon">✈️</div>
            </div>

            <h1>Welcome</h1>
            <p>Sign in to access the Aviation Obstacle Registration System</p>

            <!-- Show error messages if login fails -->
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="error-message">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Login Form -->
            <form asp-controller="Account" asp-action="Login" method="post">
                <!-- Email input -->
                <input type="email" 
                       name="Email" 
                       placeholder="Email address" 
                       required 
                       autocomplete="email" />

                <!-- Password input -->
                <input type="password" 
                       name="Password" 
                       placeholder="Password" 
                       required 
                       autocomplete="current-password" />

                <!-- Remember Me checkbox -->
                <label class="remember-me">
                    <input type="checkbox" name="RememberMe" />
                    <span>Remember me</span>
                </label>

                <!-- Login button -->
                <button type="submit">Sign In</button>
            </form>

            <!-- Link to registration page -->
            <div class="register-link">
                Don't have an account? 
                <a asp-controller="Account" asp-action="AuthPage">Create one here</a>
            </div>
        </div>
    </div>

    <!-- Leaflet JavaScript for the map -->
    <script src="~/lib/leaflet/leaflet.js"></script>
    
    <script>
        // Initialize the map when the page loads
        document.addEventListener('DOMContentLoaded', function () {
            
            // Create the map centered on Norway (adjust coordinates as needed)
            // The map is set to not be interactive (dragging: false, etc.)
            var map = L.map('landing-map', {
                center: [60.4720, 8.4689], // Center of Norway
                zoom: 5,
                zoomControl: false,      // No zoom buttons
                dragging: false,          // Can't drag the map
                touchZoom: false,         // Can't zoom with touch
                scrollWheelZoom: false,   // Can't zoom with scroll wheel
                doubleClickZoom: false,   // Can't zoom with double click
                boxZoom: false,           // Can't zoom with box select
                keyboard: false           // Can't use keyboard to navigate
            });

            // Add the OpenStreetMap tiles (the actual map images)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // The map is now visible but not interactive
            // User must log in to access the full system
        });
    </script>
</body>
</html>
