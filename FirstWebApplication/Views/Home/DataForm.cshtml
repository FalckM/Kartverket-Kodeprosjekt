@model FirstWebApplication.Models.ObstacleData
@{
    ViewData["Title"] = "Register obstacle";
}

<div class="max-w-md mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-2">Register your Obstacle</h1>
    <p class="text-gray-600 mb-6">Please provide following information as presented in the form.</p>

    <form asp-action="DataForm" method="post" class="space-y-5">
        <div>
            <label asp-for="ObstacleName" class="block text-sm font-medium mb-1"></label>
            <input asp-for="ObstacleName"
                   class="w-full border border-gray-300 rounded-md p-2
                          focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
            <span asp-validation-for="ObstacleName" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="ObstacleHeight" class="block text-sm font-medium mb-1"></label>
            <input asp-for="ObstacleHeight"
                   class="w-full border border-gray-300 rounded-md p-2
                          focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
            <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="ObstacleDesc" class="block text-sm font-medium mb-1"></label>
            <input asp-for="ObstacleDesc"
                   class="w-full border border-gray-300 rounded-md p-2
                          focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
            <span asp-validation-for="ObstacleDesc" class="text-sm text-red-600"></span>
        </div>

        <button type="submit"
                class="w-full sm:w-auto inline-flex justify-center items-center
                       rounded-md bg-blue-600 px-4 py-2 text-white font-medium
                       hover:bg-blue-700 focus-visible:outline focus-visible:outline-2
                       focus-visible:outline-offset-2 focus-visible:outline-blue-600">
            Submit Data
        </button>
    </form>
</div>
