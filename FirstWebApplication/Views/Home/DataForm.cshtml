<div> 
    <h1>Register your Obstacle</h1>
    <p>Please provide following information as presented in the form.</p>
    <form asp-action="DataForm" method="post">
        <div> 
            <label asp-for="ObstacleName">Obstacle Name:</label>
            <input asp-for="ObstacleName" />
        </div>

        <div>
            <label asp-for="ObstacleHeight">Obstacle Height:</label>
            <input asp-for="ObstacleHeight" />
        </div>

