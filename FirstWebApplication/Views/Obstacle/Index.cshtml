@model IEnumerable<FirstWebApplication.Models.ObstacleData>

@{
    ViewData["Title"] = "All Obstacles";
}

<div class="container mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Registered Obstacles</h1>
            <a asp-action="DataForm" class="py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-150 ease-in-out">
                + Register New Obstacle
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Height</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Registered Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Registered By</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#@item.Id</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.ObstacleName</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.ObstacleHeight m</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @if (!string.IsNullOrEmpty(item.ObstacleType))
                                    {
                                        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">@item.ObstacleType</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 italic">Not specified</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @if (!string.IsNullOrEmpty(item.RegisteredBy))
                                    {
                                        @item.RegisteredBy
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 italic">Unknown</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a asp-action="Overview" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 font-semibold">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Viser totalt antall hindre -->
            <div class="mt-4 text-sm text-gray-600">
                <p>Total obstacles registered: <strong>@Model.Count()</strong></p>
            </div>
        }
        else
        {
            <!-- Vises hvis det ikke finnes noen hindre ennå -->
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-lg font-medium text-gray-900">No obstacles registered yet</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by registering your first obstacle.</p>
                <div class="mt-6">
                    <a asp-action="DataForm" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                        + Register First Obstacle
                    </a>
                </div>
            </div>
        }

        <!-- Tilbake-knapp -->
        <div class="mt-6">
            <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-gray-900 font-medium">
                ← Back to Home
            </a>
        </div>
    </div>
</div>