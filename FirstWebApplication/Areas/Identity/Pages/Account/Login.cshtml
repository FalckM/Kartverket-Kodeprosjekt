@page
@model LoginModel
@{
    ViewData["Title"] = "Logg inn";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500">
    <div class="w-full max-w-md bg-white/80 backdrop-blur-md rounded-2xl shadow-2xl p-8">
        <h1 class="text-3xl font-extrabold text-center text-gray-800 mb-6">Logg inn</h1>

        <form method="post" class="space-y-5">
            <div>
                <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-1">E-post</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                        <i class="fa fa-envelope"></i>
                    </span>
                    <input asp-for="Input.Email"
                           class="w-full pl-10 pr-3 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" />
                </div>
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-1">Passord</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input asp-for="Input.Password" type="password"
                           class="w-full pl-10 pr-3 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" />
                </div>
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between text-sm">
                <label class="flex items-center space-x-2 text-gray-700">
                    <input asp-for="Input.RememberMe" class="h-4 w-4 text-purple-600 rounded" />
                    <span>Husk meg</span>
                </label>
                <a asp-page="./ForgotPassword" class="text-purple-600 hover:text-purple-800">Glemt passord?</a>
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-semibold py-2 rounded-lg shadow-lg transition-all">
                Logg inn
            </button>

            <div class="text-center mt-4 text-gray-700 text-sm">
                <p>Eller registrer deg her:</p>
                <a asp-page="./Register" class="font-semibold text-purple-600 hover:text-purple-800">Opprett konto</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
