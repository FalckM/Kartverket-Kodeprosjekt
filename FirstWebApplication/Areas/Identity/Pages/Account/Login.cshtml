@page
@model FirstWebApplication.Areas.Identity.Pages.Account.LoginModel
@{
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
    ViewData["Title"] = "Logg inn";
}

<div class="fixed inset-0 flex items-center justify-center"
     style="background-image: url('/images/norge-kart.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;">
    <div class="absolute inset-0 bg-black opacity-40"></div>

    <div class="relative z-10 w-full max-w-md bg-white/95 rounded-2xl shadow-xl p-8">
        <h1 class="text-3xl font-extrabold text-center text-blue-700 mb-6">Logg inn</h1>

        <form id="account" method="post">
            <div class="mb-4">
                <label asp-for="Input.Email" class="block font-semibold mb-1 text-gray-800">E-post</label>
                <input asp-for="Input.Email"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block font-semibold mb-1 text-gray-800">Passord</label>
                <input asp-for="Input.Password" type="password"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-between mb-5">
                <label class="inline-flex items-center text-gray-700">
                    <input asp-for="Input.RememberMe" class="mr-2" /> Husk meg
                </label>
                <a asp-page="./ForgotPassword" class="text-blue-600 hover:text-blue-700 text-sm font-medium">Glemt passord?</a>
            </div>

            <button type="submit"
                    class="w-full py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition">
                Logg inn
            </button>

            <p class="mt-5 text-center text-gray-100">
                Eller registrer deg her:
                <a asp-page="./Register" class="text-blue-400 hover:text-blue-300 font-semibold">Opprett konto</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
